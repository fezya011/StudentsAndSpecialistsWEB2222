<Window x:Class="WpfAppStudentsAndSpecialists.View.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppStudentsAndSpecialists.View"
        mc:Ignorable="d"
        Title="AddGroupWindow" Height="250" Width="300">
    <Grid>
       

        <StackPanel Margin="5">            
            <TextBlock Text="Индекс специальности"/>
            <TextBox Text="{Binding IdSpec}"/>
            <TextBlock Text="Название группы"/>
            <TextBox Text="{Binding Title}"/>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Bottom" Margin="5">
            <Button Content="Сохранить" Command="{Binding SaveNewGroup}"/>
            <Button Content="Вернуться" Command="{Binding GoToBack}"/>
        </StackPanel>
    </Grid>
</Window>
