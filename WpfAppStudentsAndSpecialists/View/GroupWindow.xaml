<Window x:Class="WpfAppStudentsAndSpecialists.View.GroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppStudentsAndSpecialists.View"
        mc:Ignorable="d"
        Title="GroupWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5">
            <ListView ItemsSource="{Binding Groups}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="100"/>
                        <GridViewColumn Header="Кол-во студентов" DisplayMemberBinding="{Binding StudentsCount}" Width="100"/>
                        <GridViewColumn Header="Специальность" DisplayMemberBinding="{Binding IdSpecial}" Width="100"/>
                        
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="5">
            <!--<TextBlock Text="Индекс специальности"/>
            <TextBox Text="{Binding IndexSpec}"/>-->
            <Button Content="Получить cтатистику" Command="{Binding ShowStatsBySpec}"/>
            <Button Content="Получить список пустых групп" Command="{Binding ShowEmptyGroups}"/>
            <Button Content="Очистить" Command="{Binding ClearList}"/>

           
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="5">
            <Button Content="Добавить группу" Command="{Binding GoToAddGroupWindow}"/>
            <Button Content="Вернуться" Command="{Binding GoToBack}"/>
        </StackPanel>
    </Grid>
</Window>
